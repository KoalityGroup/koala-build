{
    "compilerOptions": {
        "allowJs": false,
        "checkJs": false,
        "allowUnreachableCode": true,
        "declaration": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "target": "es5",
        "baseUrl": "src/koala-build"
    },
    "include": [
        "./src/**/*",
        "./tests/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}